{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - La boutique Française {% endblock %}

{% block content %}
<div class="small-block">
<form method="post">
    {% for message in app.flashes('notice') %}
        <div class="alert alert-success">{{message}}</div>
    {% endfor %}
    <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
    <label for="inputEmail">Email</label>
    <input type="email"  name="email" id="inputEmail" class="form-control" autocomplete="email"  placeholder="Votre E-mail" required autofocus>
    <button class="btn  btn-info text-white col-md-12 my-4" type="submit">
        Réinitialiser mon mot de passe
    </button>
    <hr>
    <p class="text-center">Ou souhaitez vous <a href="{{path ('app_login')}}" >Vous connecter ?</a></p>
</form>
</div>
{% endblock %}
