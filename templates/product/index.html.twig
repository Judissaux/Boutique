{% extends 'base.html.twig' %}

{% block title %}Nos produits - La boutique Française{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-3">
        <h3>Filtrer</h3>
        {{form(form)}}
    </div>
    <div class="col-md-9">
        <h3 class='text-center'>Nos produits</h3>
        <div class='row product-container'>
        {% for product in products %}

        <div class="col-md-4 text-center">
            <div class='product-item' >
                <a class='product-page-price' href="{{path('app_product', {'slug' : product.slug})}}"><img src="/uploads/{{product.illustration}}" alt="{{product.name}}" class="img-fluid"></a>
                <h4 class='product-name'>{{product.name}}</h4>
                <span class='product-subtitle'>{{product.subtitle}}</span>
                <span class='product-price'>{{ (product.price /100) | number_format(2,',','.') }}€</span>
             </div>
        </div>
{% endfor %}
    </div>
</div>

 
{% endblock %}
